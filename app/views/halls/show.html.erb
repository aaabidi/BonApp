		        <p class="title is-4"><%= link_to amenity.name, amenity  %></p>
		      </div>
		    </div>
		    <div class="comment-count">
		    	<span class="tag is-rounded"><%= amenity.statuses.count %> statuses</span>
		    </div>
		  </div>
		</div>
    <% end %>
		<% end %>
    <%= link_to 'Back', halls_path, class: "button is-small is-info" %>
	</div>
</div>
