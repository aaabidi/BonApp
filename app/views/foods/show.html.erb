<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @food.user.name %>
</p>

<p>
  <strong>Hall:</strong>
  <%= @food.hall %>
</p>

<h2>Comments</h2>
<% @food.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= comment.user.name %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= comment.rating %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<%= form_for([@food,@food.comments.new]) do |f| %>
  <p>
    <%= f.label :user %> <br />
    <%= f.text_field :user %>
  </p>

  <p>
    <%= f.label :rating %> <br />
    <%= f.number_field :rating, in: 1..5, step: 1 %>
  </p>

  <p>
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back to Food Item', foods_path %> |
<%= link_to 'Back to Dining Hall', halls_path %>
